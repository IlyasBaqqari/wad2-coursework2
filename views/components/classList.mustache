<div class="overflow-x-auto mx-4">
  <div class="flex space-x-4 py-2">
    {{#classes}}
      <a href="/class/{{_id}}">
        <div class="flex-shrink-0 flex flex-col justify-between items-between bg-stone-200 rounded-2xl w-64 h-36 p-4 my-4 hover:bg-purple-200 transition-all hover:shadow hover:cursor-pointer">
          <h3 class="text-xl text-center font-semibold mb-3">{{title}}</h3>
          <p class="text-md text-center text-stone-600">{{date}}  @  {{time}}</p>
        </div>
      </a>
    {{/classes}}
  </div>
</div>
{{^classes}}
  <div class="flex justify-center items-center">
    <div class="flex justify-center items-center h-24 bg-stone-100 rounded-2xl w-4/5 m-5">
      <p class="text-center text-stone-400 p-0 m-0">No classes available</p>
    </div>
  </div>
{{/classes}}